{
  "manifest_version": 2,
  "name": "Hello World Extension",
  "version": "1.0",
  "description": "A simple Hello World Firefox extension",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  }
}
